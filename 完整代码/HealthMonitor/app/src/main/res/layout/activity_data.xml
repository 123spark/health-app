<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Analysis Result" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:id="@+id/LinearLayout01">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="80dip"
                android:id="@+id/btnStart"
                android:text="开始"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="80dip"
                android:id="@+id/btnExit"
                android:text="停止"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/timeText"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time"
                android:hint="请输入时间范围"/>

            <Button
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:id="@+id/ScreenBtn"
                android:text="全屏"/>

        </LinearLayout>

        <SurfaceView
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:id="@+id/SurfaceView01"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/quiethr1"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:text="当前心率"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/quiethr2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sportime1"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:text="运动时间"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/sportime2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:text=""
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/errhr1"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="异常时间"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/errhr2"
            android:layout_width="267dp"
            android:layout_height="match_parent"
            android:text=""
            android:layout_weight="0.50"
            android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>